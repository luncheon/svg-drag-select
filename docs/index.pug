doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= name
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-64398169-1")
    script window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments)}gtag('js',new Date());gtag('config','UA-64398169-1');
    link(rel="preconnect" href="https://fonts.gstatic.com/" crossorigin)
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Comfortaa|Roboto:300")
    link(rel="preload" as="script" href="https://www.google-analytics.com/analytics.js")
    style.
      html, body { height: 100%; }
      body { margin: 8px 16px; font-family: Roboto,sans-serif; font-weight: 300; }
      header { display: flex; align-items: center; white-space: nowrap; margin: .5em 0; }
      h1 { margin: 0; font-family: Comfortaa; font-weight: 400; font-size: 2.5rem; }
      svg {
        border: 1px solid #ccc;
        box-shadow: 0 0 8px #aaa;
        margin: 0 16px 8px 0;
        touch-action: none;
        touch-action: manipulation;
      }
      path {
        fill: #ddd;
        stroke: #888;
      }
      path.selected {
        fill: #f84f79;
      }
      .svg-drag-select-area {
        border: 1px dotted gray;
        background-color: rgba(255,255,255,.4)
      }
  body
    header
      h1= name
      a(href=`https://github.com/luncheon/${name}`)
        img(src="https://cdn.jsdelivr.net/npm/octicons@7.0.1/build/svg/mark-github.svg" alt="GitHub" style="height: 2.5rem; margin-left: 1em; vertical-align: bottom;")
    p= description

    main
      //- https://simplemaps.com/resources/svg-world
      include ./world.svg
    script(src="index.min.js")
    script.
      svgDragSelect({
        svg: document.getElementsByTagName('svg')[0],
        intersection: true,
        onSelect: function (event) {
          event.selectedElements
            .concat(event.previousSelectedElements)
            .filter(function (element, index, elements) {
              return elements.indexOf(element) === index
            })
            .forEach(function (element) {
              element.classList.toggle('selected', event.selectedElements.indexOf(element) !== -1)
            })
        },
      })
